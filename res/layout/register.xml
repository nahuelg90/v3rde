<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/verde_background" >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
	   	<LinearLayout
	   	     android:layout_width="match_parent"
       		 android:layout_height="wrap_content"
       		 android:orientation="vertical"
       		 android:gravity="center_horizontal"
       		 android:layout_marginBottom="20dp">
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:src="@drawable/logo_home"/>
	        
	        <LinearLayout
	            android:layout_width="240dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="20dp"
	            android:orientation="vertical"
	            >
	             <LinearLayout
				    android:focusable="true" android:focusableInTouchMode="true"
				    android:layout_width="0px" android:layout_height="0px"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Nombre:"
	                android:textSize="14dp"
	                android:textColor="@color/verde_texto_comun"/>
	            <EditText
	                android:id="@+id/et_register_nombre"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:hint="Nombre"
	                android:paddingLeft="4dp"
	                android:layout_marginTop="10dp"
	                android:textSize="14dp"
	                android:background="@drawable/txtfield"
	                android:textColor="@color/verde_texto_comun"
	                android:nextFocusUp="@id/et_register_nombre" 
		    		android:nextFocusLeft="@id/et_register_nombre"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Apellido:"
	                android:layout_marginTop="10dp"
	                android:textSize="14dp"
	                android:textColor="@color/verde_texto_comun"/>
	            <EditText
	                  android:id="@+id/et_register_apellido"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:hint="Apellido"
	                android:paddingLeft="4dp"
	                android:layout_marginTop="10dp"
	                android:textSize="14dp"
	                android:background="@drawable/txtfield"
	                android:textColor="@color/verde_texto_comun"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Email:"
	                android:layout_marginTop="10dp"
	                android:textSize="14dp"
	                android:textColor="@color/verde_texto_comun"/>
	            <EditText
                 	android:id="@+id/et_register_mail"	
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:hint="Email"
	                android:paddingLeft="4dp"
	                android:layout_marginTop="10dp"
	                android:inputType="textEmailAddress"
	                android:textSize="14dp"
	                android:background="@drawable/txtfield"
	                android:textColor="@color/verde_texto_comun"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Contrase単a:"
	                android:layout_marginTop="10dp"
	                android:textSize="14dp"
	                android:textColor="@color/verde_texto_comun"/>
	            <EditText
	                  android:id="@+id/et_register_pass"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:hint="Contrase単a"
	                android:paddingLeft="4dp"
	                android:layout_marginTop="10dp"
	                android:inputType="textPassword"
	                android:textSize="14dp"
	                android:background="@drawable/txtfield"
	                android:textColor="@color/verde_texto_comun"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Repetir contrase単a:"
	                android:layout_marginTop="10dp"
	                android:textSize="14dp"
	                android:textColor="@color/verde_texto_comun"/>
	            <EditText
	                android:id="@+id/et_register_pass2"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:hint="Repetir Contrase単a"
	                android:paddingLeft="4dp"
	                android:inputType="textPassword"
	                android:layout_marginTop="10dp"
	                android:textSize="14dp"
	                android:background="@drawable/txtfield"
	                android:textColor="@color/verde_texto_comun"/>
	             <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Localidad:"
	                android:layout_marginTop="10dp"
	                android:textSize="14dp"
	                android:textColor="@color/verde_texto_comun"/>
	            <Spinner
	                android:id="@+id/register_spinner"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="4dp"
	                android:layout_marginTop="10dp"
	                android:background="@drawable/txtfield"
	                android:textColor="@color/verde_texto_comun"/>
	            
	            <RelativeLayout 
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginBottom="15dp"
                >
                
                <ImageButton 
                    android:id="@+id/btn_registro_aceptar"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:background="@drawable/aceptar"/>
                
                <ImageButton 
                    android:id="@+id/btn_registro_cancelar"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cancelar"/>
            </RelativeLayout>
	        </LinearLayout>
	        
	    </LinearLayout>
	</ScrollView>
</LinearLayout>